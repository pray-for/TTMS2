<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/search_nav</item>
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>
    <style name="GuideTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="dot_style">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/drawable_point_indicator</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/main_theme</item>
        <item name="colorControlActivated">@color/editText</item>
        <item name="colorAccent">#FFCC00</item>

    </style>
    <style name="PopWindows" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/login_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/login_push_bottom_out</item>
    </style>
</resources>
