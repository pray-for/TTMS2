<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/name_text"
            android:text="演出厅名称 : "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/name_text"
            android:text="大地演出厅"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/studio_text"
            android:text="演出厅ID : "
            android:layout_below="@id/name_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ID"
            android:layout_below="@id/name_text"
            android:text="1"
            android:paddingEnd="20dp"
            android:layout_alignTop="@id/studio_text"
            android:gravity="end"
            android:textSize="16sp"
            android:layout_toEndOf="@id/studio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/flag"
            android:layout_alignTop="@id/studio_text"
            android:layout_alignParentEnd="true"
            android:text="1"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/flag_text"
            android:text="演出厅状态 : "
            android:layout_alignTop="@id/studio_text"
            android:layout_toStartOf="@id/flag"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/row_text"
            android:text="行数 : "
            android:layout_marginTop="5dp"
            android:layout_below="@id/studio_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/row"
            android:layout_toEndOf="@id/row_text"
            android:layout_alignTop="@id/row_text"
            android:text="10"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/col_text"
            android:layout_toEndOf="@id/row"
            android:layout_alignTop="@id/row_text"
            android:layout_marginStart="30dp"
            android:text="列数 : "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/col"
            android:layout_toEndOf="@id/col_text"
            android:layout_alignTop="@id/row_text"
            android:text="15"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</LinearLayout>