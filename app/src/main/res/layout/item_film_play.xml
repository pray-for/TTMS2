<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@color/recyclerView_back"

        >
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/form_time_text"
            android:text="开始时间 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/form_time"
            android:layout_margin="8dp"
            android:text="2:00"
            android:layout_toRightOf="@id/form_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/end_time_text"
            android:layout_margin="8dp"
            android:text="结束时间 :"
            android:layout_below="@id/form_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/end_time_text"
            android:layout_below="@id/form_time_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/stduio_id_text"
            android:layout_below="@id/end_time_text"
            android:text="    演出厅 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/stduio_id"
            android:layout_margin="8dp"
            android:layout_below="@id/end_time_text"
            android:layout_toRightOf="@id/stduio_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</FrameLayout>